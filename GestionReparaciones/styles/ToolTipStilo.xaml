<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ToolTip" x:Key="EstiloPersonalizadoToolTip">
        <Setter Property="Background" Value="{StaticResource colorFondo}"/>
        <Setter Property="Foreground" Value="{StaticResource colorTexto}"/>
        <Setter Property="BorderBrush" Value="{StaticResource colorBorde}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

</ResourceDictionary>

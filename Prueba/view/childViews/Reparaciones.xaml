<UserControl x:Class="Prueba.view.childViews.Reparaciones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prueba.view.childViews" xmlns:viewModel="clr-namespace:Prueba.viewModel"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">

   
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Lista de reparaciones -->
        <GroupBox Header="Reparaciones en curso" Grid.Column="0" Margin="5">
            <ListView Name="ReparacionesListView"  Height="342" VerticalAlignment="Top" ItemsSource="{Binding VehiculosAsignados}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Marca" DisplayMemberBinding="{Binding Marca}" Width="70"/>
                        <GridViewColumn Header="Matricula" DisplayMemberBinding="{Binding Matricula}" Width="70"/>
                        <GridViewColumn Header="Estado" DisplayMemberBinding="{Binding Estado}" Width="145"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Detalle de la reparación -->
        <GroupBox Header="Detalles Reparación" Grid.Column="1" Margin="5">
            <StackPanel Margin="10" VerticalAlignment="Top">

                <TextBlock Text="Vehículo:" FontWeight="Bold" Style="{StaticResource txtChildViews}" Tag="{StaticResource colorGreen}"/>
                <TextBox Name="VehiculoTextBox" IsReadOnly="True" Margin="0,0,0,10" />

                <TextBlock Text="Problema reportado:" FontWeight="Bold" Style="{StaticResource txtChildViews}" Tag="{StaticResource colorGreen}"/>
                <TextBox Name="ProblemaTextBox" TextWrapping="Wrap" Height="20" Margin="0,0,0,10"/>

                <TextBlock Text="Diagnóstico:" FontWeight="Bold" Style="{StaticResource txtChildViews}" Tag="{StaticResource colorGreen}"/>
                <TextBox Name="DiagnosticoTextBox" TextWrapping="Wrap" Height="38" Margin="0,0,0,10"/>

                <TextBlock Text="Repuestos:" FontWeight="Bold" Style="{StaticResource txtChildViews}" Tag="{StaticResource colorGreen}"/>
                <ListBox Name="RepuestosListBox" Height="22" Margin="0,0,0,10"/>

                <TextBlock Text="Estado de reparación:" FontWeight="Bold" Style="{StaticResource txtChildViews}" Tag="{StaticResource colorGreen}"/>
                <ComboBox Name="EstadoComboBox" Margin="0,0,0,10" ItemsSource="{Binding ListaEstadoReparacion}"/>

                <Button Content="Guardar cambios" Width="150" Margin="0,10,0,0"/>
                <Button Content="Finalizar reparación" Width="150" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>

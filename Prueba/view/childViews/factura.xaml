<UserControl x:Class="Prueba.view.childViews.factura"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prueba.view.childViews" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Botón para generar nueva factura -->
        <Button Content="Generar Nueva Factura" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Row="0" Width="200" Height="40" VerticalAlignment="Top"/>

        <!-- Listado de facturas -->
        <GroupBox Header="Listado de Facturas" Grid.Row="1">
            <ListView Name="FacturasListView" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Número de Factura" DisplayMemberBinding="{Binding NumeroFactura}" Width="120"/>
                        <GridViewColumn Header="Cliente" DisplayMemberBinding="{Binding Cliente}" Width="150"/>
                        <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="100"/>
                        <GridViewColumn Header="Fecha" DisplayMemberBinding="{Binding Fecha}" Width="120"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Detalle de la factura seleccionada -->
        <GroupBox Header="Detalle de Factura" Margin="0,10,0,0" Grid.Row="2">
            <StackPanel Margin="10">
                <TextBlock Text="Número de Factura:" FontWeight="Bold"/>
                <TextBox Name="NumeroFacturaTextBox" IsReadOnly="True" Margin="0,5" />

                <TextBlock Text="Cliente:" FontWeight="Bold"/>
                <TextBox Name="ClienteTextBox" IsReadOnly="True" Margin="0,5"/>

                <TextBlock Text="Total:" FontWeight="Bold"/>
                <TextBox Name="TotalTextBox" IsReadOnly="True" Margin="0,5"/>

                <TextBlock Text="Fecha:" FontWeight="Bold"/>
                <TextBox Name="FechaTextBox" IsReadOnly="True" Margin="0,5"/>

                <TextBlock Text="Detalles de la reparación:" FontWeight="Bold"/>
                <ListBox Name="DetallesReparacionListBox" Margin="0,5" Height="100"/>

                <Button Content="Imprimir Factura" Width="150" Margin="0,10,0,0"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>

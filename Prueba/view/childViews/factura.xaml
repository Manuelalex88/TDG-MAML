<UserControl x:Class="Prueba.view.childViews.Factura"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Mis Facturas Pendientes -->
        <GroupBox Header="Mis Facturas Pendientes" FontWeight="Bold" FontSize="14" Grid.Column="0" Margin="5">
            <ListView ItemsSource="{Binding FacturasPendientes}"
                      SelectedItem="{Binding FacturaSeleccionada}"
                      Margin="5">
                <ListView.View> <!--TOCAR ARREGLAR-->
                    <GridView>
                        <GridViewColumn Header="Modelo" Width="100" DisplayMemberBinding="{Binding Modelo}" />
                        <GridViewColumn Header="Marca" Width="100" DisplayMemberBinding="{Binding Marca}" />
                        <GridViewColumn Header="Matrícula" Width="100" DisplayMemberBinding="{Binding Matricula}" />
                        <GridViewColumn Header="Cliente" Width="150" DisplayMemberBinding="{Binding ClienteNombre}" />
                        <GridViewColumn Header="Fecha" Width="120" DisplayMemberBinding="{Binding FechaEmision}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Facturar -->
        <GroupBox Header="Facturar" FontWeight="Bold" FontSize="14" Grid.Column="1" Margin="5">
            <ScrollViewer>
                <StackPanel Margin="10" VerticalAlignment="Top">

                    <!-- Cliente -->
                    <GroupBox Header="Cliente" FontSize="12">
                        <StackPanel Margin="5">
                            <TextBox Text="{Binding NombreCliente}" Margin="0,0,0,5" IsReadOnly="True"/>
                            <TextBox Text="{Binding DniCliente}" Margin="0,0,0,5" IsReadOnly="True"/>
                            <TextBox Text="{Binding TelefonoCliente}" Margin="0,0,0,5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Vehículo -->
                    <GroupBox Header="Vehículo" FontSize="12" Margin="0,10,0,0" Height="97">
                        <StackPanel Margin="5">
                            <TextBox Text="{Binding MatriculaVehiculo}" Margin="0,0,0,5" IsReadOnly="True"/>
                            <TextBox Text="{Binding MarcaVehiculo}" Margin="0,0,0,5" IsReadOnly="True"/>
                            <TextBox Text="{Binding ModeloVehiculo}" Margin="0,0,0,5" IsReadOnly="True"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Mecánico -->
                    <GroupBox Header="Mecánico" FontSize="12" Margin="0,10,0,0" Height="53">
                        <StackPanel Margin="5">
                            <TextBox Text="{Binding NombreMecanico}" Margin="0,0,0,5" IsReadOnly="True"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Precio total -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Precio Total:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="{Binding PrecioTotal, StringFormat=C}" Margin="10,0,0,0" FontSize="14"/>
                    </StackPanel>

                    <!-- CRUD / Acciones -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Eliminar" Command="{Binding EliminarFacturaCommand}" Margin="0,0,10,0" Width="80" Style="{StaticResource btnEliminarFactura}"/>
                        <Button Content="Facturar" Command="{Binding ConfirmarFacturaCommand}" Width="80" Style="{StaticResource btnFacturar}"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>

<UserControl x:Class="Prueba.view.childViews.VehiculosEnTaller"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prueba.view.childViews"
             xmlns:vm="clr-namespace:Prueba.viewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Vehículos en el Taller" 
                   FontSize="24" FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   Style="{StaticResource txtChildViews}"
                   Tag="{StaticResource colorBlue}"/>

        <!-- Lista de vehículos con distribución horizontal -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding VehiculosEnTaller}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <!--Designed by macrovector_official / Freepik-->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" BorderThickness="1" 
                                Margin="5" Padding="10" CornerRadius="8" Width="200">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                                <TextBlock Text="{Binding Marca}" 
                                           HorizontalAlignment="Center" Margin="0,0,0,4" 
                                           Style="{StaticResource txtTextBlockTitulo}"
                                           Tag="{StaticResource colorBlue}"/>
                                <TextBlock Text="{Binding Modelo}" 
                                           Style="{StaticResource txtTextBlockSub}"
                                           Tag="{StaticResource colorGray}"
                                           HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding Matricula}" 
                                           Style="{StaticResource txtTextBlockSub}"
                                           Tag="{StaticResource colorGray}"
                                           HorizontalAlignment="Center" Margin="0,0,0,10" />

                                <Button Content="Asignarme este vehículo" 
                                        Width="150"
                                        Command="{Binding DataContext.AsignarVehiculoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

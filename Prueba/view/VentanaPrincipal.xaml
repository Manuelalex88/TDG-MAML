<Window x:Class="Prueba.view.VentanaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:Prueba.view" xmlns:viewmodel="clr-namespace:Prueba.viewModel"
        xmlns:localChild="clr-namespace:Prueba.view.childViews" 
        mc:Ignorable="d"
        Height="600" Width="1200"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        >
    <!--Le pasamos el contexto del viewmodel-->
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    <!--Recursos del view model (Para las childViews)-->
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodel:BaseViewModel}">
            <local:principalView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodel:registrarVehiculosViewModel}">
            <local:Registrarvehiculo/>
        </DataTemplate>
            
        <DataTemplate DataType="{x:Type viewmodel:ReparacionesViewModel}">
            <localChild:Reparaciones/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodel:FacturaViewModel}">
            <localChild:Factura/>
        </DataTemplate> 
        
        <DataTemplate DataType="{x:Type viewmodel:VehiculosEnTallerViewModel}">
            <localChild:VehiculosEnTaller/>
        </DataTemplate>
        
    </Window.Resources>

    <Border CornerRadius="10"
            BorderBrush="{StaticResource colorFondoVentanaPrincipal1}"
            Background="{StaticResource colorFondoVentanaPrincipal1}"
           >

        <Grid>
            <Grid.ColumnDefinitions>
                <!--Menu de navegacion-->
                <ColumnDefinition Width="250"/>
                <!--Seccion de contenido-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Menu de navegacion borde-->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0"
                    Background="{StaticResource colorFondoPrimario}">
                <StackPanel>
                    <!--Logo-->
                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40">
                        <Image Source="\images\ventanaPrincipal\fondotaller.png"/>
                        <TextBlock Text="TALLER MANUEL"
                                   Foreground="{StaticResource colorBlanco}"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <RadioButton Style="{StaticResource botones}" 
                                 Tag="{StaticResource colorIconosVentanaPrincipal}"
                                 IsChecked="True"
                                 Command="{Binding showPrimerachildView}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Home" Style="{StaticResource botonMenu}"/>
                            <TextBlock Text="Principal" Style="{StaticResource botonMenuTexto}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource botones}" 
                                 Tag="{StaticResource colorB2}"
                                 Command="{Binding showSegundachildView}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Database" Style="{StaticResource botonMenu}"/>
                            <TextBlock Text="Registrar Vehiculo" Style="{StaticResource botonMenuTexto}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource botones}" 
                                 Tag="{StaticResource colorGreen}"
                                 Command="{Binding showReparacionesChildView}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Wrench" Style="{StaticResource botonMenu}"/>
                            <TextBlock Text="Reparaciones" Style="{StaticResource botonMenuTexto}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource botones}" 
                                 Tag="{StaticResource colorBlue}"
                                 Command="{Binding ShowVehiculosEnTallerChildView}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="Car" Style="{StaticResource botonMenu}"/>
                            <TextBlock Text="Vehiculos En Taller" Style="{StaticResource botonMenuTexto}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource botones}" 
                                 Tag="{StaticResource colorSilver}"
                                 Command="{Binding showFacturasChildView}">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconImage Icon="MoneyBill" Style="{StaticResource botonMenu}"/>
                            <TextBlock Text="Facturas" Style="{StaticResource botonMenuTexto}"/>
                        </StackPanel>
                    </RadioButton>

                    

                </StackPanel>
            </Border>

            <!--Seccion Principal-->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1"
                    >
                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="1,0">
                        <GradientStop Color="{StaticResource colorParaGradientes1}" Offset="0"/>
                        <GradientStop Color="{StaticResource colorParaGradientes2}" Offset="0.5"/>
                        <GradientStop Color="{StaticResource colorParaGradientes3}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <!--Barra de control-->
                        <RowDefinition Height="25"/>
                        <!--Para el encabezado-->
                        <RowDefinition Height="35"/>
                        <!--Para la seccion de contenido o los childs views-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    

                    <StackPanel x:Name="pnlBarraControl"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseDown="Window_MouseDown"
                                MouseEnter="pnlBarraControl_MouseEnter">
                        <!--Ver si interesa mas en que se pueda mover haciendo clic
                        en toda la aplicacion o solo arriba-->
                        <Button x:Name="btnClose"
                                Style="{StaticResource botonesVentana}"
                                Tag="{StaticResource colorIconosVentanaPrincipal}"
                                Click="btnClose_Click">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource botonCerrar}"/>

                        </Button>
                        <Button x:Name="btnMaximizar"
                                Style="{StaticResource botonesVentana}"
                                Tag="{StaticResource colorIconosVentanaPrincipal}"
                                Click="btnMaximizar_Click">
                            <fa:IconImage Icon="WindowMaximize" Style="{StaticResource botonCerrar}"/>
                        </Button>
                        <Button x:Name="btnminimize"
                                Style="{StaticResource botonesVentana}"
                                Tag="{StaticResource colorIconosVentanaPrincipal}"
                                Click="btnminimize_Click">
                            <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource botonCerrar}"/>
                        </Button>
                    </StackPanel>
                    <!--Cabezero-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!--Cabezero 1 mitad-->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <fa:IconImage Icon="{Binding Icon}"
                                          Height="20"
                                          Width="20"
                                          Foreground="{StaticResource colorBlanco}"
                                          Margin="35,0,10,0"/>
                            <TextBlock Text="{Binding Caption, UpdateSourceTrigger=PropertyChanged}"
                                       Foreground="{StaticResource colorBlanco}"
                                       FontSize="16"
                                       FontFamily="Montserrat"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <!--Cabezero 2 mitad-->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0">
                            <Menu Style="{StaticResource menuStilo}" Tag="{StaticResource colorBlanco}">
                                <MenuItem Height="36" Width="23">
                                    <MenuItem.Header>
                                        <fa:IconImage Icon="AngleDown"
                                            Height="12" Width="12"
                                            Foreground="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=Menu}}"
                                            Style="{StaticResource botonCerrar}"/>
                                    </MenuItem.Header>
                                    <!-- Aplicar el estilo a los submenús -->
                                    <MenuItem.ItemContainerStyle>
                                        <Style TargetType="MenuItem" BasedOn="{StaticResource submenuEstilo}" />
                                    </MenuItem.ItemContainerStyle>

                                    <!-- Submenú -->
                                    <MenuItem Header="Opción 1"/>
                                    <MenuItem Header="Opción 2"/>
                                </MenuItem>
                            </Menu>
                            <TextBlock Text="{Binding NombreUsuario}"
                                       Foreground="{StaticResource colorBlanco}"
                                       FontFamily="Montserrat"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                            <Ellipse Height="35" Width="35"
                                     Stroke="{StaticResource colorBlanco}"
                                     StrokeThickness="2"
                                     Margin="10,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Images/login/Login.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Button Style="{StaticResource botonesCabezero}"
                                    Tag="{StaticResource colorBlanco}">
                                <fa:IconImage Icon="QuestionCircle" Style="{StaticResource botonCabezero}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                    <!-- Seccion de contenido (child views)-->
                    <ContentControl Content="{Binding CurrentChildView}"
                                    Grid.Row="2"
                                    Margin="25"/>
                    
                </Grid>
            </Border>
        </Grid>
    </Border>

</Window>

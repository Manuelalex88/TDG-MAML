<Window x:Class="Prueba.view.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prueba.view"
        xmlns:viewModel="clr-namespace:Prueba.viewModel" xmlns:customcontrols="clr-namespace:Prueba.customControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True" 
        Height="550" Width="800" MouseDown="Window_MouseDown">

    <Window.DataContext>
        <viewModel:loginViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>


    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
    </Window.Visibility>

    <!--Primer Border para la imagen de fondo mas que todo -MAML-->
    <Border CornerRadius="10">
        <Border.Background>
            <ImageBrush ImageSource="/images/login/fondoLogin.jpg"/>
        </Border.Background>
        <!--Segundo Border para la Creacion de la ventana -MAML-->
        <Border CornerRadius="10"
            Background="{StaticResource colorFondoPrimario}"
            BorderBrush="{StaticResource colorFondoPrimario}"
            BorderThickness="5"
            Opacity="0.82">
            <!--Metemos un Grid hijo para el titulo login -MAML-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="329*"/>
                    <RowDefinition Height="181*"/>
                </Grid.RowDefinitions>
                <!--Grid para los "objetos" del login -MAML-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="TALLER MANUEL"
                               Foreground="{StaticResource colorBlanco}"
                               FontSize="20"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    <!--Botones Minimizar y Cerrar -MAML-->
                    <Button x:Name="btnMinimizar"
                            BorderThickness="0"
                            Content="-"
                            FontSize="15"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimizar_Click">
                        <!--Diseño del boton (Ambos iguales) -MAML-->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" Height="20"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      TextElement.Foreground="{TemplateBinding Foreground}"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <!--Estilo del boton (Ambos iguales) -MAML-->
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource colorB1}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EBE5C2"/>
                                        <Setter Property="Foreground" Value="#504B38"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                    </Button>

                    <Button x:Name="btnCerrar"
                            BorderThickness="0"
                            Content="X"
                            FontSize="15"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnCerrar_Click">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" Height="20"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      TextElement.Foreground="{TemplateBinding Foreground}"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource colorB1}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#EBE5C2"/>
                                        <Setter Property="Foreground" Value="#504B38"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                    </Button>

                </Grid>
                <!--Stack panel para organizar las partes del login -MAML-->
                <StackPanel Width="250"
                            Grid.Row="1"
                            Orientation="Vertical"
                            Margin="270,35,270,0" Grid.RowSpan="2">

                    <Image Source="/images/login/Login.png"
                           Width="100"
                           Height="100"/>
                    <!--Texblock del Titulo -MAML-->
                    <TextBlock Text="ACCESS"
                               Foreground="{StaticResource colorBlanco}"
                               FontSize="25"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                    <!--Texblock del nombre del usuario -MAML-->
                    <TextBlock Text="User"
                               Foreground="{StaticResource colorBlanco}"
                               FontSize="15"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,35,0,0"/>

                    <TextBox x:Name="txtUsuario"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13"
                             FontWeight="Bold"
                             FontFamily="Montserrat"
                             Background="{StaticResource colorB1}"
                             Foreground="White"
                             CaretBrush="LightGray"
                             Height="20"
                             VerticalAlignment="Center"
                             Margin="0,5,0,0">
                    </TextBox>
                    <!--Texblock del password -MAML-->
                    <TextBlock Text="Password"
                               Foreground="{StaticResource colorBlanco}"
                               FontSize="15"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,10,0,0"/>

                    <customcontrols:customPasswordControl 
                        Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Height="20"
                        Margin="0,5,0,0"
                      >
                    </customcontrols:customPasswordControl>
                    <TextBlock Text="{Binding MensajeError}"
                            Foreground="{StaticResource colorRed}"
                            FontSize="15"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0,10,0,0"
                            TextWrapping="Wrap"/>
                    <!--Boton del login -MAML-->
                    <Button x:Name="btnLogin"
                            Command="{Binding LoginCommand}"
                            BorderThickness="0"
                            Content="LOG IN"
                            FontSize="15"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Margin="0,50,0,0"
                            >

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      TextElement.Foreground="{TemplateBinding Foreground}"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource colorB1}"/>
                                <Setter Property="Foreground" Value="{StaticResource colorBlanco}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource colorBlanco}"/>
                                        <Setter Property="Foreground" Value="{StaticResource colorFondoPrimario}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>

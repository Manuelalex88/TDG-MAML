<UserControl x:Class="Prueba.view.adminChildViews.FacturaAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prueba.view.adminChildViews"
             xmlns:viewmodel="clr-namespace:Prueba.viewModel.viewModelAdmin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <viewmodel:FacturasAdminViewModel/>
    </UserControl.DataContext>


    <Grid>
        <ListView x:Name="FacturaListViewControl" ItemsSource="{Binding FacturaList}" Style="{StaticResource EstiloListViewFacturas}">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource EstiloEncabezadoGridView}">
                    <GridViewColumn Header="ID FACTURA" Width="Auto" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="DNI" Width="Auto" DisplayMemberBinding="{Binding Dni}" />
                    <GridViewColumn Header="Nombre del Cliente" Width="Auto" DisplayMemberBinding="{Binding ClienteNombre}" />
                    <GridViewColumn Header="Matricula" Width="Auto" DisplayMemberBinding="{Binding Matricula}" />
                    <GridViewColumn Header="Fecha Emisión" Width="Auto" DisplayMemberBinding="{Binding FechaEmision, StringFormat=d}" />
                    <GridViewColumn Header="Pagado" Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Pagado}" IsEnabled="False" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Total" Width="Auto" DisplayMemberBinding="{Binding Total, StringFormat=C}" />
                    <GridViewColumn Header="Acciones" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                    <Button Content="Descargar" Margin="0,0,5,0" 
                                            Command="{Binding DataContext.DescargarFacturaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" Style="{StaticResource btnChildView}"/>
                                    <Button Content="Eliminar" 
                                            Command="{Binding DataContext.BorrarFacturaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" Style="{StaticResource btnChildView}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
